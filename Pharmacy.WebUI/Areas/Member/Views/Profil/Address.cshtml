@model IEnumerable<Pharmacy.BOL.Entities.Address>

@{
    ViewBag.Title = "Address";
}

<div class="secondary_page_wrapper">

    <div class="container">
        <ul class="breadcrumbs">

            <li><a href="/Member">Ana Sayfa</a></li>
            <li>Profilim</li>

        </ul>
        <div class="row">
            @{ Html.RenderAction("Sidebar", "Profil");}
            <main class="col-md-9 col-sm-8">

                <h1>Adreslerim</h1>

                <div class="top_box on_the_sides">
                    <section class="section_offset">
                        <div style="padding:5px"><a href="@Url.Action("CreateAddress","Profil")" class="button_dark_grey middle_btn">Yeni Adres</a></div>
                        <div class="row genel">
                            <div class="col-sm-12">
                                <div class="table_wrap">
                                    <table class="table">
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.name)
                                            </th>
                                            <th>
                                                İl
                                            </th>
                                            <th>
                                                İlçe
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.address)
                                            </th>
                                        </tr>

                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.District.City.name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.District.name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.address)
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Düzenle", "Edit", new {  id=item.ID }) |
                                                    @Html.ActionLink("Detay", "Details", new { id = item.ID }) |
                                                    @Html.ActionLink("Sil", "Delete", new { id = item.ID })
                                                </td>
                                            </tr>
                                        }

                                    </table>

                                </div>
                            </div>
                        </div>
                    </section>

                </div><!--/ .top_box -->

            </main><!--/ [col]-->

        </div><!--/ .row-->

    </div><!--/ .container-->

</div><!--/ .page_wrapper-->